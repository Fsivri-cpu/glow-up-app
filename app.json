{
  "expo": {
    "name": "Glow Up",
    "slug": "glowup",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/glowup_logo.png",
    "scheme": "glowup",
    "userInterfaceStyle": "automatic",
    "primaryColor": "#B36B9F", 
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.furkansivri.glowup"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/glowup_logo.png",
        "backgroundColor": "#FFEEF2"
      },
      "edgeToEdgeEnabled": true,
      "softwareKeyboardLayoutMode": "pan"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/glowup_logo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/glowup_logo.png",
          "imageWidth": 240,
          "resizeMode": "contain",
          "backgroundColor": "#FFEEF2"
        }
      ],
      "expo-font"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
